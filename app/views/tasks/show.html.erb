<h1 class="center"><%= @group.name %></h1>

<h2 class="center"><%= @task.title %></h2>

<div class="row">
  <div class="column">
    <h3>Deadline</h3>
    <p><%= @task.deadline %></p>

    <h3>Description</h3>
    <p><%= @task.description %></p>
  </div>

  <div class="column center">
    <h4>Todos</h4>

    <form action="/groups/<%= @group.id %>/tasks/<%= @task.id %>/todos" method="POST">
      <input type="hidden" name="_method" value="PATCH">
      <% @task.todos.each do |todo| %>
        <input type="checkbox" name="todo[]" value="<%= todo.id %>" <%= 'checked' if (todo.complete? == true) %>><%= todo.content %>
        <p class="right"> ---- assigned to: <%= todo.assigned ? todo.assigned.username : 'no one yet' %></p>
      <% end %><br><br>
      <input type="checkbox" name="task" <%= 'checked' if (@task.complete? == true) %> class="center"> Mark entire task complete<br><br>
      <label for="content">Add todo:</label><br>
      <input type="text" name="content"><br><br>
      <input type="submit" value="Update">
    </form>
  </div>
</div>

<br>

<a href="/groups/<%= @group.id %>/tasks"><button type="button">Back to Tasks</button></a>

<br>

<a href="/groups/<%= @group.id %>/tasks/<%= @task.id %>/edit"><button type="button">Edit Task</button></a>


<br><br><form action="/logout" method="POST" class="center">
  <input type="submit" value="Log Out">
</form>
