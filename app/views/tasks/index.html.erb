<h1 class="center">Tasks for <%= @group.name %></h1>

<% @group.tasks.each do |task| %>
  <h3><a href="/groups/<%= @group.slug %>/tasks/<%= task.id %>"><%= task.title %></a></h3>

  <% task.sub_tasks.each do |sub_task| %>
    <p><%= sub_task.content %> - <%= sub_task.complete? ? 'DONE' : 'still outstanding' %></p>
  <% end %>

<% end %>


<br><br><form action="/logout" method="POST" class="center">
  <input type="submit" value="Log Out">
</form>
